<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tubb.calendarselector">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NormalActivity"/>
        <activity android:name=".SingleMonthSelectorActivity"/>
        <activity android:name=".CalendarSelectorActivity"/>
        <activity android:name=".CustomDrawerActivity"/>
        <activity android:name=".StateSavedActivity"/>
        <activity android:name=".ViewPagerActivity"/>
    </application>

</manifest>
